{
  "name": "mern-jwt",
  "version": "0.0.1",
  "engines": {
    "node": ">=6.0.0"
  },
  "description": "mern authentication boilerplate utilizing jwt",
  "main": "index.js",
  "scripts": {
    "add": "git add -f client/build && npm run commit",
    "build": "node internals/scripts/build.js",
    "checkout": "git checkout -b deploy && npm run add",
    "clean": "./internals/scripts/clean",
    "client": "node internals/scripts/client.js",
    "commit": "git commit -m \"deploy\" && npm run push",
    "compose": "./internals/scripts/compose",
    "coverage": "nyc --reporter=html npm test",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "db": "node internals/scripts/db.js",
    "db:seed": "node server/db/seeds/seeder.js",
    "deploy": "npm i build && npm i checkout",
    "delete": "git branch -D deploy",
    "lint": "eslint .",
    "generate": "plop --plopfile internals/generators/index.js",
    "master": "git checkout master && npm run delete",
    "prettify": "prettier --write",
    "push": "git push -f heroku deploy:master && npm run master",
    "setup": "npm i && cd client && npm i",
    "server": "nodemon --watch server index.js",
    "server-prod": "NODE_ENV=production node index.js",
    "ssl": "./internals/scripts/generate-ssl-certs.sh",
    "start": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
    "start-prod": "NODE_ENV=production concurrently \"npm run server-prod\" \"./client/serve.sh\"",
    "test": "cd client && npm i test",
    "up": "./internals/scripts/up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xanimo/mern-jwt.git"
  },
  "keywords": [
    "Mern",
    "MongoDB",
    "Express",
    "React",
    "Node",
    "Jwt"
  ],
  "author": "xanimo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xanimo/mern-jwt/issues"
  },
  "homepage": "https://github.com/xanimo/mern-jwt#readme",
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-limiter": "^1.6.1",
    "express-session": "^1.18.0",
    "generate-password": "^1.7.1",
    "glob": "^10.3.10",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "limax": "^4.1.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.2.0",
    "mongoose-seed": "^0.6.0",
    "morgan": "^1.10.0",
    "owasp-password-strength-test": "^1.3.0",
    "sanitize-html": "^2.12.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "plop": "^4.0.1"
  }
}
